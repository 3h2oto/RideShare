.map-marker {
  width: 100%;
  height: 100%;
}

.show-mode{
  position: absolute;
  top: 200rpx;
  right: 0rpx;
  width: 200rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
}
.show-mode .btn-mode{
  height: 100%;
  flex: 1 1  auto;
  line-height: 80rpx;
  text-align: center;
}
.show-mode .active{
  color: #f40;
}

.cover-view {
  position: absolute;
  right: 20rpx;
  top: 80rpx;
  width: 100rpx;
  height: 200rpx;
}

.cover-view .cover-wraper {
  width: 100%;
  height: 100%;
}

.cover-view .cover-wraper .btn {
  background: rgba(0, 0, 0, 0.5);
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  border-radius: 50%;
  margin: 20rpx 0rpx;
}
